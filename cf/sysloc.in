        done
        if test -z "$FREETYPELIBDIR"; then
	    AC_MSG_WARN([freetype library not found, setting with_freetype=no])
            FREETYPELIBDIR=default
            with_freetype=no
        fi ])
    fi
    if test "$FREETYPELIBDIR" = "/usr/lib"; then
        FREETYPELIBDIR=default
    fi
