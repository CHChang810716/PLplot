#!/usr/bin/make -f
# -*- Makefile -*-
# Made with the aid of dh_make, by Craig Small
# Sample debian/rules that uses debhelper. GNU copyright 1997 by Joey Hess.
# This version is for a hypothetical package that builds an
# architecture-dependant package, as well as an architecture-independant
# package.
# Modified by Rafael Laboissiere <rafael@debian.org> on 1998/06/12
# for the plplot package

# Uncomment this to turn on verbose mode. 
#export DH_VERBOSE=1

version		:= 5.1.0

debbase		:= $(shell pwd)/debian
debtmp		:= $(debbase)/tmp
debusr		:= $(debtmp)/usr
deblib		:= $(debusr)/lib
debdoc		:= $(debusr)/share/doc
debinfo		:= $(debusr)/share/info
cfflags		:= --with-double --disable-linuxvga --without-rpath

export DEMOS_DIR = /usr/share/doc/plplot/examples

#ifeq (,$(findstring $(DEB_BUILD_ARCH),i386 m68k mips mipsel powerpc sparc))
#export DH_OPTIONS += -Npython-plplot
#else
with_python = yes
#endif

build: build-stamp
build-stamp:
	dh_testdir
	make configure
# Build first bare libraries (no Tcl/Tk) 
	./configure --prefix=/usr --disable-tcl --disable-tk \
	                          --disable-python $(cfflags)
# This PLLIB_PATH setting is necessary to avoid the lintian error
# ldconfig-symlink-referencing-wrong-file 
	make PLLIB_PATH=
	mv tmp/lib*.a* tmp/lib*.so* tmp/plrender $(debbase)
# Build the Tcl/Tk libraries
ifeq ($(with_python),yes)
	./configure --prefix=/usr --enable-tcl --enable-tk \
	                          --enable-python --enable-octave $(cfflags)
else
	./configure --prefix=/usr --enable-tcl --enable-tk \
	                          --disable-python --enable-octave $(cfflags)
endif
	make PLLIB_PATH=
	touch build-stamp

clean:
	dh_testdir
	dh_testroot
	rm -f build-stamp
	-$(MAKE) clean
	rm -rf configure confdefs.h config.log $(debbase)/lib* \
              $(debbase)/plrender $(debbase)/plplotdoc-info-* \
	      $(debbase)/plplotdoc-man-* $(debbase)/manpages
	rm -rf tmp
	dh_clean

install: install-stamp
install-stamp: build-stamp
	dh_testdir
	dh_testroot
	dh_clean -k

	(cd tmp; make PREFIX=$(debusr) install)
# This hack ought to go away when it is fixed upstream
	chmod -x $(deblib)/plplot$(version)/tcl/plcolor.tcl ; \

# Temporary hack
	rm -f $(debusr)/bin/plplot_linkage
	#rm -f $(debusr)/bin/plplot-config
	#rm -f $(debusr)/bin/pstex2eps

	( cd $(debdoc)/plplot ; \
	  mv CHANGES changelog ; \
	  rm -f Copyright COPYING.LIB mklinks README.local )

	dh_installmanpages --package=plplot
ifeq ($(with_python),yes)
	dh_movefiles --package=python-plplot
# Make x16.py non-executable.  Temporary hack.
	chmod -x \
	  $(debbase)/python-plplot/usr/share/doc/plplot/examples/python/qplplot.py
endif

	touch install-stamp	

# Build architecture-independent files here.
binary-indep: build install
	#dh_testversion ge 2.0.86
	dh_testdir -i
	dh_testroot -i
	dh_installdocs -i
	( cd $(debbase)/plplot-doc/usr/share/doc/plplot-doc ; \
	  mv plplotdoc-html-* html )
	( cd $(debbase) ; \
	  tar xfz ../doc/plplotdoc-info-*.tar.gz ; \
	  cp plplotdoc-info-*/* $(debinfo) )
	dh_installchangelogs -i 
	dh_movefiles -i
	dh_compress -i
	dh_fixperms -i
	#dh_suidregister -i
	dh_installdeb -i
	dh_gencontrol -i
	dh_md5sums -i
	dh_builddeb -i

binary-arch: build install
	#dh_testversion ge 2.0.86
	dh_testdir -a
	dh_testroot -a
	dh_installdocs -a
	( cd $(debbase) ; \
	  tar xfz ../doc/plplotdoc-man-*.tar.gz ; \
	  mv plplotdoc-man-* manpages )
	dh_installmanpages --package=plplot-dev $(debbase)/*.1
	dh_installmanpages --package=plplot
	dh_installchangelogs -a 

	dh_installdirs -a
	rm -f $(deblib)/libplcxxd.so.5.* $(deblib)/libplcxxd.so.5
	mv $(debbase)/libplcxxd.so.5.* \
	  $(debbase)/libplcxxd.so.5 \
	  $(deblib)

	dh_movefiles -a
# Why do not dh_movefiles remove empty dirs? Grumpf...
	( cd $(debusr) ; \
          rm -rf include lib share/info share/man share/doc/plplot/examples )
	mv $(debbase)/libplplotd.so.5.* \
	   $(debbase)/libplplotd.so.5 \
           $(debbase)/plplot-xwin/usr/lib
	mv $(debbase)/plrender $(debbase)/plplot-xwin/usr/bin
	cp $(debbase)/plrender.1 $(debbase)/plplot-xwin/usr/share/man/man1

	dh_strip -a
	dh_compress -a -Xexamples/
	dh_fixperms -a
	#dh_suidregister -a
	DH_COMPAT=3 dh_makeshlibs -a
	dh_installdeb -a
	dh_shlibdeps -a -l$(debbase)/plplot-tcl/usr/lib
	dh_gencontrol -a
	dh_md5sums -a
	dh_builddeb -a

source diff:                                                                  
	@echo >&2 'source and diff are obsolete - use dpkg-source -b'; false

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary
