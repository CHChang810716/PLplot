\newcommand{\bnameCF}[4]{\pagebreak[2]\begin{ename}
	{\fbox{\tt#1}{\qquad#2}}\\{\fbox{\tt#3}{\qquad#4}}\end{ename}\nopagebreak}
\newcommand{\descr}[1]{\begin{edescr}#1\end{edescr}}
\newcommand{\rou}[1]{\code{#1} (page~\pageref{#1})}
