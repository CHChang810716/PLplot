clean:
	rm -f $(EXECUTABLES_list) *.ali *.o

# Due to command-line limitations of gnatmake cannot continue (by trailing \)
# anything after -cargs below.
.adb$(EXEEXT):
	$(GNAT_EXECUTABLE_BUILDER) $< \
	-cargs $(shell $(PKG_CONFIG_ENV) pkg-config @PC_STATIC_OPTION@ --cflags plplot-ada) -largs $(RPATHCMD) $(shell $(PKG_CONFIG_ENV) pkg-config @PC_STATIC_OPTION@ --libs plplot-ada)

.SUFFIXES: .adb $(EXEEXT)
