CC = @CC@
CFLAGS = @CFLAGS@
EXEEXT = @EXEEXT@
LIB_TAG = @LIB_TAG@
INCLUDEANDLIB = @INCLUDE_DIR_CMD@ @LIB_DIR_CMD@ -lplplot$(LIB_TAG)
PKG_CONFIG_PATH = @PKG_CONFIG_PATH@

EXECUTABLES_list = \
		 x01c$(EXEEXT) \
		 x02c$(EXEEXT) \
		 x03c$(EXEEXT) \
		 x04c$(EXEEXT) \
		 x05c$(EXEEXT) \
		 x06c$(EXEEXT) \
		 x07c$(EXEEXT) \
		 x08c$(EXEEXT) \
		 x09c$(EXEEXT) \
		 x10c$(EXEEXT) \
		 x11c$(EXEEXT) \
		 x12c$(EXEEXT) \
		 x13c$(EXEEXT) \
		 x14c$(EXEEXT) \
		 x15c$(EXEEXT) \
		 x16c$(EXEEXT) \
		 x17c$(EXEEXT) \
		 x18c$(EXEEXT) \
		 x19c$(EXEEXT) \
		 x20c$(EXEEXT) \
		 x21c$(EXEEXT)

all: $(EXECUTABLES_list)

clean:
	rm -f $(EXECUTABLES_list)

.c$(EXEEXT):
@pkg_config_true@	PKG_CONFIG_PATH=$(PKG_CONFIG_PATH) $(CC) $< -o $@ `pkg-config --cflags --libs plplot$(LIB_TAG)`
@pkg_config_false@	plplot_libtool --mode=link $(CC) $(CFLAGS) $< $(INCLUDEANDLIB) -o $@

.SUFFIXES: .c $(EXEEXT)
