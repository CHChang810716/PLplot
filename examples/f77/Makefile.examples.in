INCLUDEANDLIB = -I@INCLUDE_DIR@ -L@LIB_DIR@ -lplplotf77@LIB_TAG@ 

F77 = @F77@
EXEEXT = @EXEEXT@

EXECUTABLES_list = \
		 x01f$(EXEEXT) \
		 x02f$(EXEEXT) \
		 x03f$(EXEEXT) \
		 x04f$(EXEEXT) \
		 x05f$(EXEEXT) \
		 x06f$(EXEEXT) \
		 x07f$(EXEEXT) \
		 x08f$(EXEEXT) \
		 x09f$(EXEEXT) \
		 x10f$(EXEEXT) \
		 x11f$(EXEEXT) \
		 x12f$(EXEEXT) \
		 x13f$(EXEEXT) \
		 x16f$(EXEEXT)

all: $(EXECUTABLES_list)

clean:
	rm -f $(EXECUTABLES_list)

.f$(EXEEXT):
	plplot_libtool --mode=link $(F77) $< $(INCLUDEANDLIB) -o $@

.SUFFIXES: .f $(EXEEXT)
