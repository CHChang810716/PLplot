F77 = @F77@
EXEEXT = @EXEEXT@
LIB_TAG = @LIB_TAG@
INCLUDEANDLIB = @INCLUDE_DIR_CMD@ @LIB_DIR_CMD@ -lplplotf77$(LIB_TAG)
PKG_CONFIG_PATH = @PKG_CONFIG_PATH@

# x19f excluded from this list because the plmap and plmeridians fortran
# API is not implemented as part of the common API (and probably won't be 
# for a long time because of having to work around the mapform type of 
# argument for these functions).

EXECUTABLES_list = \
		 x01f$(EXEEXT) \
		 x02f$(EXEEXT) \
		 x03f$(EXEEXT) \
		 x04f$(EXEEXT) \
		 x05f$(EXEEXT) \
		 x06f$(EXEEXT) \
		 x07f$(EXEEXT) \
		 x08f$(EXEEXT) \
		 x09f$(EXEEXT) \
		 x10f$(EXEEXT) \
		 x11f$(EXEEXT) \
		 x12f$(EXEEXT) \
		 x13f$(EXEEXT) \
		 x15f$(EXEEXT) \
		 x16f$(EXEEXT) \
		 x16af$(EXEEXT) \
		 x17f$(EXEEXT) \
		 x18f$(EXEEXT)

all: $(EXECUTABLES_list)

clean:
	rm -f $(EXECUTABLES_list)

.f$(EXEEXT):
@pkg_config_true@	$(F77) $< -o $@ `PKG_CONFIG_PATH=$(PKG_CONFIG_PATH) pkg-config --cflags --libs plplot$(LIB_TAG)-f77`
@pkg_config_false@	plplot_libtool --mode=link $(F77) $< $(INCLUDEANDLIB) -o $@

.SUFFIXES: .f $(EXEEXT)
