OCAMLC = @OCAMLC@
EXEEXT = @EXEEXT@

@pkg_config_true@LIB_TAG = @LIB_TAG@
@pkg_config_true@PKG_CONFIG_ENV = @PKG_CONFIG_ENV@
@pkg_config_true@RPATHCMD = -ccopt "@RPATHCMD@"

OCAML_CFLAGS = -g -I @OCAML_INSTALL_DIR@/plplot
@pkg_config_true@OCAML_LIBS = $(RPATHCMD) -ccopt "-L @CMAKE_INSTALL_LIBDIR@" plplot.cma 
@pkg_config_false@OCAML_LIBS = -ccopt "-L @CMAKE_INSTALL_LIBDIR@" plplot.cma

