LIB_TAG = @LIB_TAG@
INCLUDEANDLIB = \
	@INCLUDE_DIR_CMD@ \
	@TCLINCCMD@ \
	@TKINCCMD@ \
	@LIB_DIR_CMD@ \
	-lplplottcltk$(LIB_TAG)

CC = @CC@
EXEEXT = @EXEEXT@
PKG_CONFIG_PATH = @PKG_CONFIG_PATH@

EXECUTABLES_list = \
		 xtk01$(EXEEXT) \
		 xtk02$(EXEEXT) \
		 xtk04$(EXEEXT)

all: $(EXECUTABLES_list)

clean:
	rm -f $(EXECUTABLES_list)

.c$(EXEEXT):
@pkg_config_true@	$(CC) $< -o $@ `PKG_CONFIG_PATH=$(PKG_CONFIG_PATH) pkg-config --cflags --libs plplot$(LIB_TAG)-tcl`
@pkg_config_false@	plplot_libtool --mode=link $(CC) $< $(INCLUDEANDLIB) -o $@

.SUFFIXES: .c $(EXEEXT)
