        done
        if test -z "$ZLIBLIBDIR"; then
            AC_MSG_WARN([zlib library not found, setting enable_png=no])
            AC_MSG_WARN([and enable_jpeg=no])	    
            ZLIBLIBDIR=default
            enable_png=no
